{
  "manifest_version": 3,
  "name": "Thunderstore Team Selector",
  "version": "1.0",
  "description": "Adds a team select menu instead of going to your first team.",
  "permissions": [
    "scripting",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://thunderstore.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://thunderstore.io/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "512": "Icon.png"
  }
}